// Place your settings in this file to overwrite default and user settings.
{
  "files.exclude": {
    "**/compiled": true,
    "**/dll": true,
    "**/.awcache": true,
    "**/dist": true,
    "**/*.d.ts": {
      "when": "$(basename).ts"
    },
    "**/*.js.map": {
      "when": "$(basename)"
    },
    "**/*.js": {
      "when": "$(basename).ts"
    },
    "**/*.css": {
      "when": "$(basename).scss"
    }
  },
  "search.exclude": {
    "**/docs": true,
    "**/coverage": true
  },
  "editor.detectIndentation": false,
  "editor.tabSize": 2,
  "typescript.check.workspaceVersion": false
}